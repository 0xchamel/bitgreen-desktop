{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "importHelpers": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "particl-market/src/types",
      "src/types",
      "types"
    ],
    "lib": [
      "es6",
      "dom"
    ],
  },
  "exclude": [
    "particl-market/test/*"
  ],
  "include": [
    "particl-market/src"
  ]
}
